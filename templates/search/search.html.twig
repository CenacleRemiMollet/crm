{% extends 'dashboard.html.twig' %}

{% block stylesheets2 %}
	<link href="/assets/search/search.css" rel="stylesheet">
{% endblock %}


{% block dashboardcontent %}
	
	<ul class="nav nav-tabs" id="myTab" role="tablist">
		<li class="nav-item">
			<a class="nav-link active" id="search-tab" data-toggle="tab" href="#search" role="tab" aria-controls="search" aria-selected="true">{% trans %}Search{% endtrans %}</a>
		</li>
	</ul>
	<div class="tab-content" id="myTabContent">
		<div class="tab-pane fade show active" id="search" role="tabpanel" aria-labelledby="search-tab">
			<ul>
				{% for result in searchResult.results %}
					<li class="row" style="padding: 1rem">
						<a href="/{{ result.type }}/{{ result.uuid }}">
							{% if result.type == 'club' %}
								<span data-feather="home"></span>
							{% endif %}
							{% if result.type == 'user' %}
								<span data-feather="user"></span>
							{% endif %}
							&nbsp;{{ result.name }}
						</a>
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>

{% endblock %}


{% block javascriptsafter1 %}
	<script src="/assets/search/search.js"></script>
{% endblock %}