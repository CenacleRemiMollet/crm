{% extends 'dashboard.html.twig' %}

{% block dashboardcontent %}

	<div class="text-center" style="width: 20rem; margin: 0 auto;">
		<form method="post">
			{% if error is defined %}
				<div class="alert alert-danger">{{ error }}</div>
			{% endif %}
			{% if errorpolicies is defined %}
				<div class="alert alert-danger">
					<ul>
						{% for policy in errorpolicies %}
							<li>{{ policy }}</li>
						{% endfor %}
					</ul>
				</div>
			{% endif %}
			
			<h1 class="h3 mb-3 font-weight-normal">{% trans %}Enter your new password{% endtrans %}</h1>
			<input type="password" name="password" id="inputPassword" class="form-control" placeholder="{% trans %}Password{% endtrans %}" required>
			<input type="password" name="password2" id="inputPassword2" class="form-control" placeholder="{% trans %}Repeat the password{% endtrans %}" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('password-renewal') }}" >
			<div class="mt-3">
				<button class="btn btn-lg btn-primary" type="submit">{% trans %}Update{% endtrans %}</button>
			</div>
		</form>

	</div>
	
{% endblock %}
