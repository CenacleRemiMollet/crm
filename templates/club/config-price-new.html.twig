{% extends 'dashboard.html.twig' %}


{% block stylesheets2 %}
	<link rel="stylesheet" href="{{ app.request.baseUrl }}/assets/tools/modif.css">
{% endblock %}


{% block dashboardcontent %}

	<br>
    <div class="table-content" style="padding: 20px">
    	<h5>Tarifs / {{ club.name }}</h5>
		<form id="myForm">
          <div class="form-group row slimmargin">
                <label for="input-discipline" class="col-sm-1 col-form-label">Discipline</label>
                <div class="col-sm-10">
                	<input type="text" class="form-control" id="input-discipline" list="disciplineName" name="discipline" value="Taekwondo" />
                    <datalist id="disciplineName">
                    	<option value="Taekwondo">Baby Taekwondo</option>
                        <option value="Taekwondo">Taekwondo</option>
                        <option value="Taekwonkido">Taekwonkido</option>
                        <option value="Hapkido">Hapkido</option>
                        <option value="Sinkido">Sinkido</option>
                        <option value="Gumdo">Gumdo</option>
                    </datalist>
                    <div class="invalid-feedback" id="txtvalid-discipline"></div>       	
                </div>
            </div>
            <div class="form-group row slimmargin">
                <label for="input-category" class="col-sm-1 col-form-label">Catégorie</label>
                <div class="col-sm-10">
                	<input type="text" class="form-control" id="input-category" name="category" value="">
                    <div class="invalid-feedback" id="txtvalid-category"></div>       	
                </div>
            </div>
            <div class="form-group row slimmargin">
                <label for="input-comment" class="col-sm-1 col-form-label">Commentaire</label>
                <div class="col-sm-10">
                	<input type="text" class="form-control" id="input-comment" name="comment" value="">
                    <div class="invalid-feedback" id="txtvalid-comment"></div>       	
                </div>
            </div>
            <div class="form-group row slimmargin">
                <label for="input-child1" class="col-sm-1 col-form-label">1er enfant</label>
                <div class="col-sm-10">
                	<input type="number" data-format="float" class="form-control" id="input-child1" name="child1" value="">
                    <div class="invalid-feedback" id="txtvalid-child1"></div>       	
                </div>
            </div>
            <div class="form-group row slimmargin">
                <label for="input-child2" class="col-sm-1 col-form-label">2ème enfant</label>
                <div class="col-sm-10">
                	<input type="number" data-format="float" class="form-control" id="input-child2" name="child2" value="">
                    <div class="invalid-feedback" id="txtvalid-child2"></div>       	
                </div>
            </div>
            <div class="form-group row slimmargin">
                <label for="input-child3" class="col-sm-1 col-form-label">3ème enfant</label>
                <div class="col-sm-10">
                	<input type="number" data-format="float" class="form-control" id="input-child3" name="child3" value="">
                    <div class="invalid-feedback" id="txtvalid-child3"></div>       	
                </div>
            </div>
            <div class="form-group row slimmargin">
                <label for="input-adult" class="col-sm-1 col-form-label">1er enfant</label>
                <div class="col-sm-10">
                	<input type="number" data-format="float" class="form-control" id="input-adult" name="adult" value="">
                    <div class="invalid-feedback" id="txtvalid-adult"></div>       	
                </div>
            </div>
            
            <div class="row">
                <div class="col-sm-10">
                	<a href="javascript:history.back()" class="btn btn-secondary">Annuler</a>
                </div>
                <div>
                	<button type="button" class="btn btn-success btncreate" data-url-create="{{ app.request.baseUrl }}/api/club/{{ club.uuid }}/prices" data-url-onsuccess="{{ app.request.baseUrl }}/club/{{ club.uuid }}/prices">Créer</button>
                </div>
            </div>
        </form>

    </div>

{% endblock %}


{% block javascripts_end_body %}
	<script src="{{ app.request.baseUrl }}/assets/tools/modif.js"></script>
{% endblock %}